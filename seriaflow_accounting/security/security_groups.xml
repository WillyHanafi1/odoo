<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="module_category_seriaflow_accounting" model="ir.module.category">
        <field name="name">Seriaflow Accounting</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_accounting_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_seriaflow_accounting"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_accounting_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_seriaflow_accounting"/>
        <field name="implied_ids" eval="[(4, ref('group_accounting_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
